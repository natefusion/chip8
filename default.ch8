def px v1
def py v2

def W #x5
def S #x8
def A #x7
def D #x9

include person #x70 #x70 #x20 #x70 #xA8 #x20 #x50 #x50

(proc main
  rand px #b0011111
  rand py #b0001111
  set i person
  draw px py 8

  (loop
    draw px py 8

    set v0 W
    eq v0 key
      add py #xFF

    set v0 S
    eq v0 key
      add py 1

    set v0 A
    eq v0 key
      add px #xFF

    set v0 D
    eq v0 key
      add px 1

    draw px py 8

    (loop
      set ve dt
      neq ve 0)

    set ve 3
    set dt ve))


